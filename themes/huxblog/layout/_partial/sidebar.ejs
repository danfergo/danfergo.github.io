



    <div class="row responsive-sidebar">
    <div class="col-xs-4 col-sm-4 col-md-12">
        <section>
            <div class="short-about">
                <% if(config['sidebar-avatar']) { %>
                <a href="/about/" title="More about me"> <img
                            src="<%= config['root'] + config['sidebar-avatar'] %>"/></a>
                <% } %>
            </div>
        </section>
    </div>
    <div class="col-xs-8 col-sm-4 col-md-12">

        <!-- Short About -->
        <section>
            <!--<br><br>-->
            <!--
            <h5><a href="<%= config.root %>about/">ABOUT ME</a></h5> -->
            <div class="short-about">

                <% config['sidebar-about-description'].forEach(function(ln, i, arr){ %>
                <p><%= ln %>
                    <% if (i == arr.length - 1) { %>
                            <a href="/about/" title="More about me"> More. </a>
                    <% } %>
                </p>
                <% }) %>
                <!--<div class="hidden-xs visible-md">-->
                    <!-- Social links -->
                    <!--<%- partial('_partial/social') %>-->
                <!--</div>-->
            </div>
        </section>

    </div>
    <div class="col-xs-12 col-sm-4 col-md-12">

        <!-- Featured Tags -->
        <% if(config['featured-tags']) { %>
        <hr class="hidden-sm">
        <section>
            <!-- no hr -->
            <h5><a href="<%= config.root %>tags/">FEATURED TAGS</a></h5>
            <div class="tags">
                <% site.tags.filter(t => t.name != 'featured').map(function(tag){ %>
                <% if(tag.length > config['featured-condition-size']) { %>
                <a href="<%= config.root %>tags/#<%= tag.name %>" title="<%= tag.name %>"
                   rel="<%= tag.length %>"><%= tag.name %></a>
                <% } %>
                <% }) %>
            </div>
        </section>
        <% } %>

        <!-- Friends Blog -->
        <% if(config.friends) { %>
        <hr>
        <h5>FRIENDS</h5>
        <ul class="list-inline">

            <% config.friends.forEach(function(friend){ %>
            <li><a href="<%= friend.href %>" target="_blank"><%= friend.title %></a></li>
            <% }); %>
        </ul>
        <% } %>
    </div>
</div>