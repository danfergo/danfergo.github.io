---
layout: page
---
<!-- Main Content -->
<!--<h1 style="margin-top:3rem; margin-bottom: 2rem;">Featured</h1>-->
<div style="height:1rem"></div>
<% site.tags.findOne({name: 'featured'}).posts.sort('date').reverse().each(function(post){ %>
    <div class="index post-preview">
        <div class="img-preview">
            <a href="<%- config.root %><%- post.path %>"
               title="<%- post.title || "Untitled" %>"
               style="background-image: url(<%= post.path + post.cover %>)"></a>
        </div>
        <div class="text-preview">
            <a href="<%- config.root %><%- post.path %>">
                <h2 class="post-title">
                    <%- post.title || "Untitled" %>
                </h2>
            </a>
            <div class="post-content-preview">
                <a href="<%- config.root %><%- post.path %>" style="text-decoration: none;">
                    <%- truncate(strip_html(clean_html(post.abstract ?? post.content)), {
                        length: 300,
                        omission: '...'
                    }) %>
                </a>
            </div>
            <div class="post-meta" style="padding-top:1rem;">
                <div><%- authors(post.authors) %> &bull;
                    <span style="word-break: keep-all; white-space: nowrap;">
                        <%= post.date.format(config.date_format) %>
                    </span>
                </div>
            </div>

        </div>
    </div>
    <!--<hr>-->
<% }); %>

<!-- Pager -->

<ul class="pager">
    <% if (page.prev){ %>
        <li class="previous">
            <a href="<%- config.root %><%- page.prev_link %>">&larr; Newer Posts</a>
        </li>
    <% } %>
    <% if (page.next){ %>
        <li class="next">
            <a href="<%- config.root %><%- page.next_link %>">Older Posts &rarr;</a>
        </li>
    <% } %>
</ul>

